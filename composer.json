{
    "name": "v-dem/queasy-db",
    "description": "Database access classes, part of Queasy PHP framework",
    "homepage": "https://github.com/v-dem/queasy-db/",
    "keywords": ["database", "pdo", "mysql", "postgresql"],
    "license": "LGPL-3.0-only",
    "version": "1.0.0",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Vitaly Demyanenko",
            "email": "vitaly_demyanenko@yahoo.com"
        }
    ],
    "config": {
        "preferred-install": "dist"
    },
    "require": {
        "php": ">=5.3.0|>=7.0.0",
        "ext-pdo": "*",
        "psr/log": "~1.1",
        "v-dem/queasy-helper": "dev-master",
        "v-dem/queasy-config": "dev-master",
        "v-dem/queasy-log": "dev-master"
    },
    "require-dev": {
        "php": ">=7.1.0",
        "phpunit/phpunit": "~7"
    },
    "autoload":{
        "psr-4":{
            "queasy\\db\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4":{
            "queasy\\db\\tests\\": "tests/"
        }
    }
}

